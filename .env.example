# Knowledge Graph Platform Environment Variables

# ===========================================
# API URLs
# ===========================================
KG_API_URL=http://localhost:8000
VITE_KG_API_URL=http://localhost:8000

# ===========================================
# Neo4j Graph Database
# ===========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=logistics_kg
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# ===========================================
# OCR Database Integration
# ===========================================
OCR_DB_HOST=localhost
OCR_DB_PORT=5432
OCR_DB_NAME=ocr_db
OCR_DB_USER=postgres
OCR_DB_PASSWORD=password

# ===========================================
# OpenAI API (for OCR processing)
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Application Settings
# ===========================================
LOG_LEVEL=INFO
DEBUG=false

# ===========================================
# Compliance Engine Settings
# ===========================================
COMPLIANCE_DB_HOST=localhost
COMPLIANCE_DB_PORT=5432
COMPLIANCE_DB_NAME=logistics_kg
COMPLIANCE_DB_USER=postgres
COMPLIANCE_DB_PASSWORD=password

# ===========================================
# External APIs (Optional)
# ===========================================
SANCTIONS_API_KEY=your_sanctions_api_key_here
WATCHLIST_API_URL=https://api.watchlist.com

# ===========================================
# Docker Settings
# ===========================================
DATABASE_URL=postgresql://postgres:password@postgres:5432/logistics_kg
